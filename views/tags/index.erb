<div class="content-top">
  <form class="search" action="/tags" method="get">
    <input type="text" name="search" placeholder="Search">
    <input type="submit" value="Submit">
  </form>
  <h2 class="h2-50">Tags</h2>
  <p><a href="/tags/new">Create New</a></p>
</div>

<div class="content-bottom">
  <% @account.tags.each do |tag| %>
    <a class="link-right" href="/tags/<%= tag.id %>/edit">Edit</a>
    <h2 class="h2-75"><%= tag.name %></h2>
    <p><b>Monthly Budget</b>: £<%= tag.budget_format %></p><br>

    <p><b>Expenditure This Month</b>: £<%= @account.tag_total( tag.id ) %></p>
    <p><b>Remaining This Month</b>: £<%= @account.tag_progress( tag.id ) %></p>
    <a href="/tags/<%= tag.id %>">View Transactions</a>

    <% if not tag == @account.tags.last %>
      <div class="content-spacer"></div>
    <% end %>
  <% end %>
</div>