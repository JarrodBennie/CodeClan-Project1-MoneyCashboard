<div class="content">

<h2><%= @merchant.name %></h2>

<p><b>Total</b>: £<%= @account.merchant_total( @merchant.id ) %></p>

<hr>

<% @account.transactions.each do |transaction| %>

<% if transaction.merchant_id == @merchant.id %>

<p><b>Amount</b>: £<%= transaction.amount %></p>
<p><b>Date</b>: <%= transaction.transaction_date %></p>

<p><b>Tag</b>: 
<% @account.tags.each do |tag| %>
<% if tag.id == transaction.id %>
<%= tag.name %>
<% end %>
<% end %></p>

<a href="/transaction/<%= transaction.id %>/edit">Edit</a>

<hr>

<% end %>
<% end %>


<br><br>
<a href="/">Back</a>

</div>